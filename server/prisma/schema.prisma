// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

//depois criar generator executar "npx prisma generate" para criar o diagrama da database
generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Criar tabelas = model (modo generico representacao)
model Pool {
  id        String   @id @default(cuid()) //@id -> chave primaria, @default -> cuuid() -> chaves geradas automaticamente (cuiid (menor) ou uuid)
  title     String
  code      String   @unique //valor único, nao pode repetir
  createdAt DateTime @default(now())

  Participants Participant[] //Chave entrangeira

  userId String? //relacionamentos entre tabelas, "?" -> significa que pode ser null
  owner  User?   @relation(fields: [userId], references: [id])
}

// DEVEMOS EXECUTAR -> npx prisma migrate dev 
// -> vai pedir nome para, para saber qual versao da migracao/tabela (descrevendo o que acoes foi feita)
// PARA poder verficar e criar nova tabela

// para aceder as tabelas criadas usamos prisma studio -> npx prisma studio

model Participant {
  id String @id @default(cuid())

  Guesses Guess[]

  userId String
  User   User   @relation(fields: [userId], references: [id])

  poolId String
  pool   Pool   @relation(fields: [poolId], references: [id])

  @@unique([userId, poolId]) //definindo vários unique id
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  avatarUrl String?
  createdAt DateTime @default(now())

  participants Participant[]
  Pool         Pool[]
}

model Game {
  id                    String   @id @default(cuid())
  date                  DateTime
  firstTeamCountryCode  String
  secondTeamCountryCode String

  Guesses Guess[]
}

model Guess {
  id String @id @default(cuid())

  gameId String
  Game   Game   @relation(fields: [gameId], references: [id])

  participantId String
  participant   Participant @relation(fields: [participantId], references: [id])
}
